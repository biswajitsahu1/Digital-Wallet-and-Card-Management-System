<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Properties -->
    <property name="LOG_PATH" value="user-service/logs" />
    <property name="LOG_FILE" value="${LOG_PATH}/user-service.log" />

    <!-- Console Appender (for dev) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/eureka-server.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Console Appender (for prod) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Optional: Customize Eureka logging level -->
    <logger name="com.netflix.eureka" level="DEBUG"/>
    <logger name="org.springframework.cloud.netflix.eureka" level="DEBUG"/>

</configuration>
