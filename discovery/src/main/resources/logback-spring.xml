<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define properties -->
    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="discovery-service"/>
    <springProperty scope="context" name="appVersion" source="spring.application.version" defaultValue="1.0.0"/>

    <property name="LOG_DIR" value="./discovery/logs" />
    <!-- Use a startup timestamp -->
    <timestamp key="START_TIME" datePattern="yyyy-MM-dd_HH-mm-ss"/>

    <!-- Log file will be created once per run -->
    <property name="LOG_FILE" value="${LOG_DIR}/${appName}.${START_TIME}.log" />

    <!-- Console log pattern -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5level | ${appName:-}, ${appVersion:-} | %msg%n%ex"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5level | ${appName:-}, ${appVersion:-} | %msg%n%ex</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Root only shows WARN+ in console -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Application logs go to file (INFO) -->
    <logger name="com.bank.discovery" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Spring Boot main logs -->
    <logger name="org.springframework.boot" level="INFO"/>
    <!-- Database related logs -->
    <logger name="org.hibernate.SQL" level="WARN"/>
    <!-- Eureka logs -->
    <logger name="com.netflix.eureka" level="INFO"/>
    <logger name="org.springframework.cloud.netflix.eureka" level="INFO"/>
</configuration>